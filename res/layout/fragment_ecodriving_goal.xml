<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/whole"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/currentGoalLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="@string/currentGoal"
        android:textStyle="bold" >
    </TextView>
    
    <TextView
        android:id="@+id/currentGoal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="40"
        android:text="    "
        android:textStyle="bold" >
    </TextView>    
    
    <ProgressBar
        android:id="@+id/progressBar1"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="2.08"
        android:max="100"
        android:paddingRight="3dp"
        android:progress="50" />    
    
    <TextView
        android:id="@+id/setNewGoalLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="@string/setNewGoal"
        android:textStyle="bold" >

    </TextView> 
    
    <!--  show goal spinner and OK button next to each other -->
	<!--  <LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">  -->    

	    <NumberPicker
	        android:id="@+id/numberPicker1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" />
	
	    <Button
	        android:id="@+id/button1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="OK" />
	    
    	<!--   </LinearLayout> -->

</LinearLayout>

